<p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>
   <%= link_to 'Logo', root_url %>

   <% if tourguide_signed_in? %>
     Logged in as <%= image_tag current_tourguide.tg_avatar.url(:thumb) if current_tourguide.tg_avatar? %><strong><%= link_to "#{current_tourguide.tg_first_name} #{current_tourguide.tg_last_name}", current_tourguide %></strong>.
     <%= link_to 'Edit profile', edit_tourguide_registration_path, :class => 'navbar-link' %> |
     <%= link_to "Log Out", destroy_tourguide_session_path, method: :delete, :class => 'navbar-link'  %>

   <% elsif user_signed_in?%>
     Logged in as <strong><%= link_to "#{current_user.email}", root_url %></strong>.
     <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
     <%= link_to "Log Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
   <% else %>
     <%= link_to "Be a Tourist", new_user_registration_path, :class => 'navbar-link'  %> |
     <%= link_to "Tourist Log In", new_user_session_path, :class => 'navbar-link'  %>

     <%= link_to "Be a Taxi Tour Guide", new_tourguide_registration_path, :class => 'navbar-link'  %> |
     <%= link_to "Tour Guide Log In", new_tourguide_session_path, :class => 'navbar-link'  %>
   <% end %>
